<section class="vh-50" style="background-color: #f4f5f7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-10 mb-4 mb-lg-0">
        <div class="card mb-2" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-black"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                alt="Avatar" class="img-fluid my-5" style="width: 150px;" />
                <!--%= image_tag current_user.avatar.url, class: 'rounded-circle', size: '50x50' %-->
              <i class><h5><%= current_user.name %></h5></i>
              <br>
              <i class="far fa-edit mb-5"></i>
            </div>
            <div class="col-md-8">
              <div class="card-body p-5">
                <h6><%= t('profiles.information')%></h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6><%= t('profiles.email')%></h6>
                    <p class="text-muted"><%= current_user.email %></p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6><%= t('profiles.name')%></h6>
                    <p class="text-muted"><%= current_user.name %></p>
                  </div>
                </div>
                <h6><%= t('profiles.introduce')%></h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <!--h6><%= t('profiles.word')%></h6-->
                    <p class="text-muted"><!--%= current_user.自己紹介文 %--></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>