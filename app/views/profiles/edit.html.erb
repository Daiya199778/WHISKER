<% content_for(:title, t('.title')) %>
<div class="container">
  <br>
  <h1 class><%= t('profiles.edit.title')%></h1>
  <hr>
  <%= form_with model: @user, url: profile_path, local: true do |f| %>
    <div class="row">
      <%= render 'shared/error_messages', object: f.object %>
      <div class="col-md-3">
        <div class="text-center">
          <%= image_tag @user.avatar.url, class: 'avatar img-circle img-thumbnail', alt: 'avatar', id: 'preview' %>
          <%= f.file_field :avatar, onchange: 'previewFileWithId(preview)', class: 'form-control mb-3', accept: 'image/*' %>
          <%= f.hidden_field :avatar_cache %>
        </div>
      </div>
      <div class="col-md-9">
        <div class="form-group col-lg-8">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control mb-3' %>
        </div>
        <div class="form-group col-lg-8">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control mb-3' %>
        </div>
        <div class="form-group col-lg-8">
          <%= f.label :introduce %>
          <%= f.text_area :introduce, class: 'form-control mb-3', rows: '4' %>
        </div>
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
<hr>
