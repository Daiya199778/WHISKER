<% content_for(:title, t('.title')) %>
<body>
  <main class="flex-grow p-0">
    <div class="container">
      <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
          <div class="card border-0 shadow rounded-3 my-5">
            <div class="card-body p-4 p-sm-5">
              <h1 class="card-title text-center mb-5 fw-light fs-2"><%= t '.title' %></h1>
              <%= form_with model: @user, local: true do |f| %>
                <%= render 'shared/error_messages', object: f.object %>
                <div class="form-floating mb-4">
                  <%= f.text_field :name, class: 'form-control', placeholder: 'Nickname', id: 'floatingName' %>
                  <%= f.label :name %>
                </div>
                <div class="form-floating mb-4">
                  <%= f.email_field :email, class: 'form-control', placeholder: 'Email', id: 'floatingEmail' %>
                  <%= f.label :email %>
                </div>
                <div class="form-floating mb-4">
                  <%= f.password_field :password, class: 'form-control', placeholder: 'Password', id: 'floatingPassword' %>
                  <%= f.label :password %>
                </div>
                <div class="form-floating mb-5">
                  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password確認用', id: 'floatingPassword_Confirmation' %>
                  <%= f.label :password_confirmation %>
                </div>
                <div class='text-center'>
                  <%= f.submit (t'defaults.register'), class: 'btn btn-primary btn-lg' %>
                </div>
                <br>
                <div class='text-center'>
                  <%= link_to (t'.to_login_page'), login_path %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div> 
    <br>
  </main>
</body>