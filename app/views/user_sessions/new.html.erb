<% content_for(:title, t('.title')) %>
<body class="flex-grow p-0">
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-body p-4 p-sm-5">
            <h1 class="card-title text-center mb-5 fw-light fs-2"><%= t '.title' %></h1>
            <%= form_with url: login_path, local: true do |f| %>
              <div class="form-floating mb-4">
                <%= f.text_field :email, class: 'form-control', placeholder: 'Email', id: 'floatingEmail' %>
                <%= f.label :email, User.human_attribute_name(:email) %>
              </div>
              <div class="form-floating mb-4">
                <%= f.password_field :password, class: 'form-control', placeholder: 'Password', id: 'floatingPassword' %>
                <%= f.label :password, User.human_attribute_name(:password) %>
              </div>
              <br>
              <div class='d-grid mb-2'>
                <%= f.submit (t'defaults.login'), class: 'btn btn-secondary btn-lg fw-bold' %>
              </div>
              <br>
              <div class='d-grid mb-3 text-center'>
                <%= link_to (t'.to_register_page'), users_path %>
              </div>
              <div class='d-grid mb-3 text-center'>
                <%= link_to (t'.password_forget'), new_password_reset_path %>
              </div>
              <hr class="my-4">
              <div class="d-grid mb-2">
                <!--%= link_to 'Googleでログインする', auth_at_provider_path(provider: :google), class: "btn btn-danger btn-lg btn-login fw-bold" %-->
                <%= link_to 'Twitterでログインする', auth_at_provider_path(provider: :twitter), class: "btn btn-primary btn-lg btn-login fw-bold" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

