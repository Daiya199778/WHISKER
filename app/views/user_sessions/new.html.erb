<% content_for(:title, t('.title')) %>
<main class="flex-grow p-0">
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-body p-4 p-sm-5">
            <h1 class="card-title text-center mb-5 fw-light fs-2"><%= t '.title' %></h1>
            <%= form_with url: login_path, local: true do |f| %>
              <div class="form-floating mb-4">
                <%= f.text_field :email, class: 'form-control', placeholder: 'Email', id: 'floatingEmail' %>
                <%= f.label :email, User.human_attribute_name(:email) %>
              </div>
              <div class="form-floating mb-4">
                <%= f.password_field :password, class: 'form-control', placeholder: 'Password', id: 'floatingPassword' %>
                <%= f.label :password, User.human_attribute_name(:password) %>
              </div>
              <br>
              <div class='text-center'>
                <%= f.submit (t'defaults.login'), class: 'btn btn-primary btn-lg' %>
              </div>
              <br>
              <br>
              <div class='text-center'>
                <%= link_to (t'.to_register_page'), users_path %>
                <a href="#"><%= t'.password_forget' %></a>
              </div>
              <hr class="my-4">
              <div class='text-center'>
                <button class="btn btn-google btn-login text-uppercase fw-bold" type="submit">
                  <i class="fab fa-google me-2"></i> <%= (t'.login_google') %>
                </button>
              </div>
              <br>
              <div class='text-center'>
                <button class="btn btn-facebook btn-login text-uppercase fw-bold" type="submit">
                  <i class="fab fa-facebook-f me-2"></i> <%= (t'.login_facebook') %>
                </button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

