<% content_for(:title, t('.title')) %>
<body class="flex-grow">
  <div class="container">
    <br>
    <br>
    <br>
    <br>
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-7 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-body p-4 p-sm-5">
            <h1 class="card-title text-center mb-5 fw-light fs-2"><%= t '.title' %></h1>
            <%= form_with url: password_resets_path, local: true do |f| %>
              <div class="form-floating mb-5">
                <%= f.email_field :email, class: 'form-control', placeholder: 'Email', id: 'floatingEmail' %>
                <%= f.label :メールアドレス %>
              </div>
              <div class='d-grid mb-4'>
                <%= f.submit (t'defaults.password_reset'), class: 'btn btn-secondary btn-lg fw-bold' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div> 
</body>
