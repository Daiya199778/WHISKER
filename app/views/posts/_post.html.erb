<div class="container">
  <div id="post-id-<%= post.id %>">
    <div class="row">
      <div class="col-md-7">
        <a href="#">
          <img class="img-fluid rounded mb-3 mb-md-0" src="https://via.placeholder.com/700x300" alt="">
        </a>
      </div>
      <div class="col-md-5">
        <div class="card-body">
          <h4 class="card-title">
            <a href="#">
              <%= post.title %>
            </a>
          </h4>
          <ul class="list-inline">
            <li class="list-inline-item">
              <%= icon 'far', 'user' %>
              <!-- post.user.nameでユーザーネームを定義する-->
              <%= post.user.name %>
            </li>
            <li class="list-inline-item">
              <%= icon 'far', 'calendar' %>
              <%= l post.created_at, format: :long %>
            </li>
          </ul>
          <p class="card-text"><%= post.body %></p>
          <p class="card-text">
            <% post.whiskey_types.each do |whiskey_type| %>
              <%# binding.pry %> 
              <%= whiskey_type.name %>
            <% end %> 
          </p>
          <p class="card-text">
            <% post.countries.each do |country| %>
                <%# binding.pry %> 
                <%= country.name %>
            <% end %> 
          </p>
          <div class='mr10 float-right'>
            <a href="#"><%= icon 'fas', 'trash', class: 'pr-1' %></a>
            <a href="#"><%= icon 'fa', 'pen' %></a>
          </div>
        </div>
      </div>
    </div>
    <hr>
  </div>
</div>