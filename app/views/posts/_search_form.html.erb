<div>
  <%= search_form_for @q, url: url do |f| %>
    <div class="text-center">
      <div class="row g-3">
        <div class="col-6 ">
          <label for="Title" class="form-label">
            <i class="bi bi-pencil-fill"></i>
            <span>タイトルで検索する</span>
          </label>
          <%= f.search_field :title_cont, class: 'form-control', placeholder: t('defaults.search_word') %>
        </div>
        <div class="col-6">
          <label for="Body" class="form-label">
            <i class="bi bi-chat-square-text-fill"></i>
            <span>内容で検索する</span>
          </label>
          <%= f.search_field :body_cont, class: 'form-control', placeholder: t('defaults.search_word') %>
        </div>
        <div class="col-6">
          <label for="User_Name" class="form-label">
            <i class="bi bi-person-video"></i>
            <span>ユーザーで検索する</span>
          </label>
          <%= f.search_field :user_name_cont, class: 'form-control', placeholder: t('defaults.search_word') %>
        </div>
        <div class="col-6">
          <label for="Whiskey_Brand" class="form-label">
            <i class="bi bi-trash2-fill"></i>
            <span>銘柄で検索する</span>
          </label>
          <%= f.search_field :whiskey_brand_cont, class: 'form-control', placeholder: t('defaults.search_word') %>
        </div>
        <%= f.submit "検索", class: "btn btn-secondary btn-lg fw-bold" %>
        <hr class="my-4">
      </div>
    </div>
  <% end %>
</div>
