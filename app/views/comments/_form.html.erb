<div class="row">
  <div class="col-sm-12 mb-4 text-right">
    <%= form_with model: comment, url: [post, comment], local: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.text_area :body, class: 'form-control mb-3', id: 'js-new-comment-body', row: 4, placeholder: 'コメントを入力してください' %>
      <%= f.submit t('defaults.comment'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
<hr>